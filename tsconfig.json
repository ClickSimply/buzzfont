{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "declaration": true,
        "declarationDir": "./dist",
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": false,
        "noEmit": false,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}